<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>All Contacts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
      <script src="https://kit.fontawesome.com/2c8d038c04.js" crossorigin="anonymous"></script>
      <style>
        .btn:hover{
            background-color: #f8f9fa !important;
            color: #000 !important;
            transition: all 0.3s ease-in-out;
        }
      </style>
</head>
<body>
  <div class="container my-4">
  
    <h1 class="mb-4 text-center">Activity</h1>
  <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/adminDashboard">Back to Dashboard</a></li>
    <li class="breadcrumb-item active" aria-current="page">Activity</li>
  </ol>
</nav>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% if (activityData.length === 0) { %>
        <div class="col">
          <div class="alert alert-info text-center">No activity found.</div>
        </div>
      <% } else { %>
        <% activityData.forEach(activity => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
                 <a href="">
                <img src="http://localhost:3000/<%- activity.image %>" class="card-img-top" alt="blog image"
                  style="height: 300px; object-fit: cover;" />
              </a>
              <div class="card-body">
                <p class="card-text"><strong>Title:</strong> <%= activity.title %></p>
                <p class="card-text"><strong>Description:</strong> <%= activity.description %></p>
              </div>
              <div class="card-footer text-muted btn text-center">
             <p class="text-center">
                    <a href="/activity/<%= activity._id %>" class="btn btn-primary">
                      <i class="fa-solid fa-pen-to-square"></i> Edit
                    </a>
                  <form action="/activity/<%= activity._id %>?_method=DELETE" method="POST" class="text-center">
                    <button type="submit" class="btn btn-danger">
                      <i class="fa-solid fa-trash"></i> Delete
                    </button>
                  </form>
                  </p>

              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
